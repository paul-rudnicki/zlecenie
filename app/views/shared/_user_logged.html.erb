<% if logged_in? %>
	<div class="user-logged">
		<div class="user-logged-options">
			<span class="bold skin-font-color2">Zalogowany jako: </span><span class="bold skin-font-color12"><%= current_user.login %></span>
			<ul>
				<li><%= link_to "~Kokpit", panel_path, class: 'skin-font-color3 skin-color-hover2' %></li>
				<li><%= link_to "~Wyloguj", wyloguj_path, class: 'skin-font-color3 skin-color-hover2' %></li>
			</ul>
		</div>
		<div class="logo-wrapp">
			<img src="images/avatar/1.jpg" alt="profile">
		</div>
	</div>
<% else %>
	<ul class="user-menu bold">
		<li><%= link_to "Zarejestruj się", logowanie_path, class: 'skin-font-color2 skin-color-hover2' %></li>
		<li><%= link_to "Zaloguj się", logowanie_path, class: 'skin-font-color2 skin-color-hover2' %></li>
	</ul>
<% end %>